Bootstrap: docker
From: ubuntu:22.04

%help
    EVHR container for running EVHR scripts

%post
    apt-get update && apt-get install -y \
        wget \
        git \
        tar \
        bzip2 \
        ca-certificates \
        build-essential \
        python3 \
        python3-pip \
        curl

    mkdir -p /usr/local/evhr/scripts
    cp -r scripts/* /usr/local/evhr/scripts/
    chmod -R a+rwx /usr/local/evhr/scripts/run_evhr

