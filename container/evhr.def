Bootstrap: docker
From: ubuntu:22.04

%help
    EVHR container for running EVHR scripts

%post
    apt-get update && apt-get install -y \
        wget \
        git \
        tar \
        bzip2 \
        ca-certificates \
        build-essential \
        python3 \
        python3-pip \
        curl

	
    mkdir -p /usr/local/evhr
    cd /usr/local/evhr

    # Clone your GitHub repo
    git clone https://github.com/typowao/evhr_senslandlab.git temp_repo

    # Copy all folders and files (not just scripts) directly into /usr/local/evhr
    cp -r temp_repo/evhr/* /usr/local/evhr/

    chmod -R a+rwx /usr/local/evhr/scripts/run_evhr || true

